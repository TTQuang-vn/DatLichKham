<html lang="en">
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

<!-- Popper JS -->
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD</title>
</head>

<body>
  <div className="container">
    <div className="row">
      <form action="/post-crud" method="POST">
        <div className="form-row">
          <div className="form-group col-md-4">
            <label for="email">Email</label>
            <input type="email" className="form-control" placeholder="Email" name="email">
          </div>
          <div className="form-group col-md-4">
            <label for="password">Mật Khẩu</label>
            <input type="password" className="form-control" name="password" placeholder="Password">
          </div>
          <div className="form-group col-md-6">
            <label for="fullname">Họ và tên</label>
            <input type="text" className="form-control" name="fullname" placeholder="Fullname">
          </div>
          <div className="form-group col-md-3">
            <label for="phone">Số điện thoại</label>
            <input type="text" className="form-control" name="phone" placeholder="099999999">
          </div>
          <div className="form-group col-md-8">
            <label for="address">Địa chỉ</label>
            <input type="text" className="form-control" name="address" placeholder=".....">
          </div>
        </div>

        <div className="form-row">
          <div className="form-group col-md-4">
            <label for="gender">Giới Tính</label>
            <select name="gender" className="form-control">
              <option value="1">Nam</option>
              <option value="0">Nữ</option>
            </select>
          </div>
          <div className="form-group col-md-2">
            <label for="point">Điểm thưởng</label>
            <input type="text" className="form-control" name="point">
          </div>
          <div className="form-group col-md-3">
            <label for="role">Phân quyền</label>
            <input type="text" className="form-control" name="role">
          </div>
        </div>


        <button type="submit" className="btn btn-primary">Đăng ký</button>
      </form>
    </div>


  </div>

</body>

</html>