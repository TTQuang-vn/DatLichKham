<html lang="en">
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

<!-- Popper JS -->
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>


<style>
  table,
  th,
  td {
    margin-top: 3%;
    margin-left: 10%;
    border: 1px solid black;
  }

  a.edit {
    outline: 2px;
    color: blue;
  }

  a.delete {
    outline: 2px;
    color: red;
  }
</style>



<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD</title>

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
  </head>

<body>
  <div>
    <table style="width: 80%;">
      <tr>
        <th>Họ và tên</th>
        <th>Email</th>
        <th>Số điện thoại</th>
        <th>Địa chỉ</th>
      </tr>
      <% dataTable.forEach(function(dataTable, i){ %>
        <tr>

          <td>
            <%= dataTable.fullname %>
          </td>
          <td>
            <%= dataTable.email %>
          </td>
          <td>
            <%= dataTable.phone %>
          </td>
          <td>
            <%= dataTable.address %>
          </td>
          <td>
            <a href="/edit-crud?id=<%= dataTable.id %>" className="edit" type="button">Chỉnh sửa</a>
            <a href="/delete-crud?id=<%= dataTable.id %>" className="delete" type="button">Xóa</a>
          </td>
        </tr>
        <% }); %>
    </table>
  </div>

</body>

</html>